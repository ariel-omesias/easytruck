<p id="notice"><%= notice %></p>

<h1>Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>Tonnage</th>
      <th>Rate</th>
      <th>Stock</th>
      <th>Phone</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.image %></td>
        <td><%= truck.description %></td>
        <td><%= truck.tonnage %></td>
        <td><%= truck.rate %></td>
        <td><%= truck.stock %></td>
        <td><%= truck.phone %></td>
        <td><%= truck.available %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

